<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingTop="15dp"
    tools:context="com.pachacama.segundocalificado.practicacalificada2.fragments.HomeFragment">

    <TextView
        android:id="@+id/textView_HOME"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:drawableStart="@mipmap/ic_todo_list"
        android:gravity="center_vertical"
        android:textStyle="bold"
        android:layout_marginBottom="15dp"
        android:text="Todos los productos"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="25sp" />

    <android.support.v7.widget.RecyclerView
        android:layout_below="@+id/textView_HOME"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:id="@+id/product_list"/>


</RelativeLayout>
